<odoo>
    <record id="quality_alert_view_form" model="ir.ui.view">
        <field name="name">quality.alert.view.form.inherit</field>
        <field name="model">quality.alert</field>
        <field name="inherit_id" ref="quality_mrp_workorder.quality_alert_view_form_inherit_mrp"/>
        <field name="arch" type="xml">
            <xpath expr="//footer/button[hasclass('oe_highlight')]" position="replace">
                <button special="save" string="Save" class="oe_highlight"
                        invisible="not context.get('display_show', True)"/>
                <button special="save" string="Use Existing W/O" class="oe_highlight"
                        invisible="context.get('display_show', True)"/>
                <button name="create_new_work_order" type="object" string="Create New W/O"
                        invisible="context.get('display_show', True)" class="oe_highlight"/>
            </xpath>
            <xpath expr="//field[@name='picking_id']" position="after">
                <field name="rework_work_center_id"/>
            </xpath>
        </field>
    </record>

    <record id="quality_alert_view_form_mrp" model="ir.ui.view">
        <field name="name">mrp.workorder.view.inherit.mrp</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="quality_mrp_workorder.mrp_workorder_view_form_tablet_inherit_quality"/>
        <field name="arch" type="xml">
            <button name="do_fail" position="replace">
                <field name="rework_workorder_id" invisible="1"/>
                <button name="do_fail" type="object" class="btn-danger"
                        attrs="{'invisible': ['|',('test_type', '!=', 'passfail'),('rework_workorder_id','!=', False)]}"
                        barcode_trigger="fail" string="Fails"/>
            </button>
            <button name="do_pass" position="replace">
                <button name="do_pass" type="object" class="btn-success"  attrs="{'invisible': ['|',('test_type', '!=', 'passfail'),('rework_workorder_id','!=', False)]}" barcode_trigger="pass" string="Pass"/>
            </button>
        </field>
    </record>
</odoo>