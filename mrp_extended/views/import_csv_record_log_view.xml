<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="import_csv_record_log_tree_view" model="ir.ui.view">
        <field name="name">import.csv.record.log.tree.view</field>
        <field name="model">import.csv.record.log</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Logs" create="false" edit="false"
                  decoration-danger="state not in ('success')" decoration-muted="state in ('success')">
                <field name="name" required="True"/>
                <field name="log_date"/>
                <field name="user_id"/>
                <field name="operation"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="import_csv_record_log_form_view" model="ir.ui.view">
        <field name="name">import.csv.record.log.form.view</field>
        <field name="model">import.csv.record.log</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Logs">
                <header>
                    <field name="state" widget="statusbar"></field>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="True" copy='False' readonly="True"/>
                            <field name="log_date" readonly="True"/>
                            <field name="user_id" readonly="True"/>
                        </group>
                        <group>
                            <field name="operation" readonly="True"/>
                            <field name="message" readonly="True"/>
                        </group>
                    </group>
                    <group string='Logs'>
                        <field name="line_ids" nolabel='1' readonly="True">
                            <tree>
                                <field name="operation" readonly="True"/>
                                <field name="message" readonly="True"/>
                                <field name="bom_id"/>
                                <field name="plm_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                 <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                </div>
            </form>
        </field>
    </record>

    <record id="import_csv_record_log_search_view" model="ir.ui.view">
        <field name="name">import.csv.record.log.search.view</field>
        <field name="model">import.csv.record.log</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name','ilike', self)]"
                       string="Name"/>
                <field name="operation" filter_domain="[('name','ilike', self)]"
                       string="Operation"/>
                <field name="log_date" filter_domain="[('log_date','ilike', self)]"
                       string="Log Date"/>
                <field name="user_id" filter_domain="[('user_id','ilike', self)]"
                       string="Responsible"></field>
                <field name="message" filter_domain="[('message','ilike', self)]"
                       string="Message"/>
                <filter string="Succeed" domain="[('state','=','success')]"
                        name="filter_log_success"/>
                <filter string="Failure" domain="[('state','=','fail')]"
                        name="filter_log_fail"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="state" string="State" domain="[]"
                            context="{'group_by':'state'}"/>
                    <filter name="user_id" string="Responsible" domain="[]"
                            context="{'group_by':'user_id'}"/>
                    <filter name="operation" string="Operation" domain="[]"
                            context="{'group_by':'operation'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="import_csv_record_log_action" model="ir.actions.act_window">
        <field name="name">Logs</field>
        <field name="res_model">import.csv.record.log</field>
        <field name="view_id" ref="import_csv_record_log_tree_view"/>
        <field name="context">{'search_default_filter_log_fail':1}</field>
    </record>

    <menuitem id="import_csv_record_parent_menu" name="Import Records"
              parent="mrp.menu_mrp_root" sequence="100"/>

    <menuitem id="import_csv_record_log_log_menu" name="Import Logs"
              parent="mrp_extended.import_csv_record_parent_menu"
              action='import_csv_record_log_action' sequence="100"/>
</odoo>